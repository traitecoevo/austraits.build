{
	"image": "ghcr.io/rocker-org/devcontainer/tidyverse:4.4",
	
	// Dev Container Features. More info: https://containers.dev/features
	// Use rocker's devcontainer features to install R packages
	// and other tools.

	"features": {
		// Quarto
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
		// R packages (via pak)
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": [
				// Generally useful packages
				"rmarkdown",
				"markdown",
				"devtools",
        "janitor",
        "skimr",
			],
		},
		// Dependent R packages from DESCRIPTION file 
		"ghcr.io/rocker-org/devcontainer-features/r-dependent-packages:latest": {},
	},
	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"REditorSupport",
				"RDebugger.r-debugger",
				"quarto.quarto",
				"mechatroner.rainbow-csv",
				"GrapeCity.gc-excelviewer",
				"aaron-bond.better-comments"
			]
		}
	}
}
