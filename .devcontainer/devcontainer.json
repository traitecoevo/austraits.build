{
	"name": "R Data Science Environment",

	"image": "ghcr.io/rocker-org/devcontainer/tidyverse:latest",
	
	// Dev Container Features. More info: https://containers.dev/features
	"features": {
		// Quarto
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
		// R packages (via pak)
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": [
				// Generally useful packages
				"rmarkdown",
				"markdown",
				"devtools",
        "janitor",
        "skimr",
				// better vscode support
        "httpgd",
        "languageserver"
			],
			"extra-packages": [
				"remotes::install_github('manuelhentschel/vscdebugger/')"
			]
		},
		// Dependent R packages from DESCRIPTION file 
		"ghcr.io/rocker-org/devcontainer-features/r-dependent-packages:latest": {},
	},
	
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"vsls-contrib.codetour",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"REditorSupport",
				"RDebugger.r-debugger",
				"george-alisson.html-preview-vscode",
				"quarto.quarto",
				"GrapeCity.gc-excelviewer",
				"aaron-bond.better-comments",
				"mechatroner.rainbow-csv"
			]
		}
	}
}
